.button {
  height: 50px;
  width: 260px;
  background: var(--bs-orange);
  box-shadow: 0 7px 15px rgba(249, 87, 46, 0.6);
  border-radius: 25px;
  font-size: 16px;
  border: none;
  outline: none;
  cursor: pointer;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: 0.3s;
}

.button:hover {
  background: var(--bs-orange-hover);
  box-shadow: 0px 15px 20px rgba(249, 87, 46, 0.7);
}